<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#dbdbd9"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/profile_header"
                android:background="@drawable/profile_bar"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/profile_bar_btm"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="140dp">

            </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/info_holder"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/profile_info_container"
        android:layout_marginTop="-80dp"
        android:layout_below="@+id/img_container"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <TextView
            android:id="@+id/user_full_name"
            android:layout_marginTop="75dp"
            android:textSize="20sp"
            android:textColor="#111"
            android:gravity="center"
            android:layout_width="match_parent"
            android:text="@string/Loading_name"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:text="Fetching email"
            android:textColor="#708BBF"
            android:id="@+id/user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/profile_info_holder"
                    android:layout_width="80dp"
                    android:layout_height="70dp">

                    <TextView
                        android:id="@+id/post_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="20sp" />
                    <TextView
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Posts"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/profile_info_holder"
                    android:layout_width="80dp"
                    android:layout_height="70dp">
                    <TextView
                        android:textColor="#fff"
                        android:id="@+id/report_count2"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report Sent"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/profile_info_holder"
                    android:layout_width="80dp"
                    android:layout_height="70dp">
                    <ImageView
                        android:id="@+id/user_status_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:gravity="center"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:textColor="#fff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Status"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="end|center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activate_btn"
                    android:layout_width="wrap_content"
                    android:textColor="#F74300"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_send_black_24dp"
                    android:layout_marginStart="10dp"
                    android:text="Activate Account"/>

                <TextView
                    android:textColor="#F74300"
                    android:gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About the app"/>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="#111">

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/img_container"
        android:layout_marginTop="-140dp"
        android:gravity="center"
        android:layout_below="@+id/profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/profile_picture"
            app:civ_border_width="7dp"
            app:civ_border_color="#fff"
            android:layout_width="150dp"
            android:layout_height="150dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/profile_info_container"
        android:layout_below="@+id/info_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="2"
                android:background="@drawable/profile_info_holder"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:text="Application Manual"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_description_black_24dp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/send_feedback_link"
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:background="@drawable/profile_info_holder"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_near_me_black_24dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:text="Send Feedback"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:background="@drawable/profile_info_holder"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:textColor="#fff"
                        android:textSize="15sp"
                        android:layout_height="wrap_content"
                        android:text="Rate the application"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_adb_black_24dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>