<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/mainactivity_bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#9111"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="100dp">

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:background="@drawable/trapiclogo_cruved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:src="@drawable/trapic_logo2"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:paddingTop="20dp"
                android:paddingBottom="40dp"
                android:orientation="vertical"
                android:background="@drawable/gradient_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:fontFamily="@font/mooka"
                    android:text="Traffic Communicating Application"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="20sp"
                    android:fontFamily="@font/mooka"
                    android:gravity="center"
                    android:text="A platform wherein the user can share awareness to everyone in the road"/>
            </LinearLayout>
        </LinearLayout>

            <LinearLayout
                android:background="@drawable/curved2"
                android:layout_width="match_parent"
                android:paddingTop="20dp"
                android:paddingBottom="30dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/login_link"
                        android:layout_width="wrap_content"
                        android:text="LOGIN ACCOUNT"
                        android:textColor="#fff"
                        android:paddingLeft="10dp"
                        android:fontFamily="@font/mooka"
                        android:layout_marginRight="5dp"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp22"
                        android:paddingRight="10dp"
                        android:background="@drawable/login_btn"
                        android:layout_height="wrap_content" />

                    <Button
                        android:fontFamily="@font/mooka"
                        android:id="@+id/register_link"
                        android:layout_marginTop="0.8dp"
                        android:textColor="#fff"
                        android:background="@drawable/reg_btn"
                        android:paddingLeft="10dp"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp22"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:text="REGISTER AN ACCOUNT"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LOGIN AS GUEST INSTEAD"
                android:fontFamily="@font/mooka"
                android:background="@drawable/guest_btn"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_chevron_left_black_24dp"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>