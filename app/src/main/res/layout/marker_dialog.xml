<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:background="#1fff"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:background="@drawable/marker_dialog_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp">
            <ImageView
                android:id="@+id/cat_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="25dp"
                    android:text="@string/Loading_name"
                    android:textSize="17sp"
                    android:textColor="#111"
                    android:id="@+id/event_cat_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/Loading_name"
                    android:id="@+id/event_cap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="60"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="#111"
                android:text="View event into newsfeed? "/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="40"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Button
                android:text="View"
                android:background="@drawable/timestamp_holder"
                android:id="@+id/view_to_newsfeed"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/close_txt"
                android:layout_width="wrap_content"
                android:textColor="#111"
                android:text="Is this event closed?"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="#3F84F8"
                android:id="@+id/yes_btn"
                android:textColor="#fff"
                android:text="Yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:background="#3F84F8"
                android:textColor="#fff"
                android:text="no"
                android:id="@+id/no_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>