<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/mainactivity_bg"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:background="#2111"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/back_area"
        android:layout_width="match_parent"
        android:gravity="start|center_vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_btn"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/trapic_logo2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="150dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginStart="40dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/feed_header"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_width="wrap_content"
                    android:textSize="17sp"
                    android:layout_height="wrap_content"
                    android:text="Send us your feedback"/>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginStart="40dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginEnd="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/feed_header"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <Button
                android:id="@+id/send_btn"
                android:layout_marginTop="30dp"
                android:textColor="#111"
                android:layout_marginStart="40dp"
                android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                android:background="@drawable/signout_btn"
                android:layout_marginEnd="40dp"
                android:text="send"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
</RelativeLayout>