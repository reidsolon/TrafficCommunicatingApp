<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_margin="8dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/name_area"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_width="60dp"
            android:gravity="center"
            android:layout_height="60dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:src="@drawable/camera_designbtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/user_img"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    app:civ_border_color="#fff"
                    app:civ_border_width="5dp"
                    app:civ_border_overlay="true"
                    android:layout_width="25dp"
                    android:layout_marginLeft="35dp"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:src="@drawable/ic_fiber_manual_record_black_24dp"/>
            </RelativeLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#111"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:text="Fetching names..."
                android:layout_height="wrap_content"
                android:id="@+id/user_name"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_marginLeft="5dp"
                android:textSize="12sp"
                android:textColor="#111"
                android:id="@+id/posted_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="fetching email..."/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/caption_holder"
        android:layout_below="@+id/name_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/img_holder"
        android:layout_below="@+id/caption_holder"
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <ImageView
            android:id="@+id/post_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:weightSum="3"
        android:layout_below="@+id/img_holder"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            
            <ImageView
                android:src="@drawable/ic_thumb_up_black_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_mode_comment_black_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/ic_report_black_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>