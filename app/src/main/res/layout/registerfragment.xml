<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:focusableInTouchMode="true"
    android:background="@drawable/mainactivity_bg"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#9111"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="40dp">

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:weightSum="3"
                android:layout_gravity="right"
                android:background="@drawable/circlesholder"
                android:layout_marginRight="20dp"
                android:layout_width="100dp"
                android:layout_height="30dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:gravity="center"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/green_circle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/yellow_circle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/red_circle"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:orientation="vertical"
                android:background="@drawable/trapiclogo_cruved"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/mooka"
                    android:textSize="20sp"
                    android:textColor="#111"
                    android:text="@string/register_txt"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:paddingTop="20dp"
                android:orientation="vertical"
                android:background="@drawable/gradient_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:focusableInTouchMode="true"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:drawableLeft="@drawable/ic_person_black_24dp"
                            android:id="@+id/reg_fname"
                            android:background="@drawable/bordered_yellow"
                            android:layout_width="250dp"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:hint="Firstname"
                            android:layout_height="35dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/reg_lname"
                            android:layout_width="250dp"
                            android:background="@drawable/bordered_yellow"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:hint="Lastname"
                            android:drawableLeft="@drawable/ic_person_black_24dp"
                            android:layout_height="35dp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/reg_pw1"
                            android:inputType="textPassword"
                            android:background="@drawable/bordered_yellow"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_width="250dp"
                            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                            android:layout_height="35dp"
                            android:hint="Password"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/reg_pw2"
                            android:inputType="textPassword"
                            android:layout_width="250dp"
                            android:paddingLeft="20dp"
                            android:background="@drawable/bordered_yellow"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
                            android:layout_height="35dp"
                            android:hint="Confirm Password"/>
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/reg_email"
                            android:drawableLeft="@drawable/ic_mail_black_24dp"
                            android:inputType="textEmailAddress"
                            android:layout_width="250dp"
                            android:hint="Email"
                            android:paddingLeft="20dp"
                            android:background="@drawable/bordered_yellow"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
                            android:layout_height="35dp" />
                    </android.support.design.widget.TextInputLayout>



                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="@drawable/curved2"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/reg_btn"
                        android:layout_width="wrap_content"
                        android:text="REGISTER ACCOUNT"
                        android:textColor="#fff"
                        android:paddingLeft="10dp"
                        android:fontFamily="@font/mooka"
                        android:layout_marginRight="5dp"
                        android:drawableRight="@drawable/ic_chevron_right_black_24dp22"
                        android:paddingRight="10dp"
                        android:background="@drawable/login_btn"
                        android:layout_height="wrap_content" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="vertical"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content">
            <Button
                android:fontFamily="@font/mooka"
                android:id="@+id/login_link"
                android:textColor="#111"
                android:background="@drawable/bordered_yellow"
                android:drawableRight="@drawable/ic_chevron_right_black_24dp"
                android:layout_width="match_parent"
                android:text="LOGIN ACCOUNT"
                android:layout_height="wrap_content" />
            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:text="LOGIN AS GUEST INSTEAD"
                android:fontFamily="@font/mooka"
                android:background="@drawable/guest_btn"
                android:textColor="#fff"
                android:drawableLeft="@drawable/ic_chevron_left_black_24dp"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</LinearLayout>