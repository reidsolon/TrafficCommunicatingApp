<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    android:weightSum="100"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/signout_section"
        android:weightSum="100"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        
        <LinearLayout
            android:weightSum="100"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="300dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_weight="55"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </LinearLayout>
            <LinearLayout
                android:layout_weight="25"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:civ_border_color="#fff"
                    app:civ_border_width="5dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent">
                <Button
                    android:id="@+id/logout_btn"
                    android:layout_width="80dp"
                    android:text="Sign Out"
                    android:textColor="#fff"
                    android:background="@drawable/login_btn"
                    android:layout_height="30dp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/signout_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_above="@id/tablayout_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v4.view.ViewPager>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/tablayout_holder"
            android:background="#1111"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="60dp">

            <android.support.design.widget.TabLayout
                android:id="@+id/tabLayout"
                android:layout_marginLeft="5dp"
                android:scrollIndicators="none"
                android:layout_marginRight="5dp"
                app:tabIndicatorColor="#1fff"
                android:layout_width="match_parent"
                android:background="@drawable/tablayout_style"
                android:layout_height="40dp">

            </android.support.design.widget.TabLayout>

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>